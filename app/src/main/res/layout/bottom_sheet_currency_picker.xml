<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <dali.hamza.echangecurrencyapp.ui.utitlies.TitleBottomSheet
        android:id="@+id/id_header_bottom_picker_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:enablePositiveAction="false"
        app:positiveButtonText="@string/selectLabel"
        app:titleText="@string/selectTtitleCurrency" />
    <include
        android:id="@+id/id_search_currency"
        layout="@layout/search_text_field"/>
    <dali.hamza.echangecurrencyapp.ui.utitlies.AppRecyclerView
        android:id="@+id/id_list_bottom_picker_currency"
        android:layout_width="match_parent"
        android:layout_height="350dp" />
</LinearLayout>